{
  "name": "n8n-nodes-smart-web-scraper",
  "version": "0.2.1",
  "description": "Smart web scraper node for n8n with automatic failover and content extraction",
  "main": "index.js",
  "scripts": {
    "build": "tsc && cp src/**/*.json dist/ 2>/dev/null || true && cp src/**/*.svg dist/ 2>/dev/null || true",
    "dev": "npm run build && npx n8n",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "release": "npm run build && npm publish"
  },
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "web-scraping",
    "scraper",
    "content-extraction",
    "firecrawl",
    "jina",
    "readability"
  ],
  "author": {
    "name": "Jez",
    "email": "jeremy@jezweb.net"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jezweb/n8n-nodes-smart-web-scraper.git"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/FirecrawlApi.credentials.js",
      "dist/credentials/JinaApi.credentials.js",
      "dist/credentials/ProxyApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/SmartWebScraper/SmartWebScraper.node.js"
    ]
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.11.0",
    "@types/turndown": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.3",
    "n8n-workflow": "^1.44.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@mozilla/readability": "^0.5.0",
    "axios": "^1.6.7",
    "jsdom": "^24.0.0",
    "turndown": "^7.1.3"
  },
  "packageManager": "pnpm@10.14.0"
}
